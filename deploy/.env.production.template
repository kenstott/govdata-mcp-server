# ================================
# Calcite JDBC Configuration
# ================================
CALCITE_JAR_PATH=/app/calcite/calcite-govdata.jar
CALCITE_MODEL_PATH=/app/govdata-model.json
CALCITE_EXECUTION_ENGINE=DUCKDB
GOVDATA_DOWNLOAD_TIMEOUT_MINUTES=2147483647

# ================================
# MCP Server Configuration
# ================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_RELOAD=false
LOG_LEVEL=INFO

# ================================
# Authentication
# ================================
# IMPORTANT: Generate secure API keys for production!
# Generate with: openssl rand -hex 32
API_KEYS=CHANGE_ME_API_KEY_1,CHANGE_ME_API_KEY_2

# JWT Configuration
# Generate secret with: openssl rand -hex 64
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# OIDC / JWT Authentication (Optional)
# ================================
# Use the "common" endpoint if you want to allow ANY Microsoft account
# OIDC_ISSUER=https://login.microsoftonline.com/common/v2.0

# This must match the Application ID URI you set under "Expose an API"
# Example: api://c6108f97-a5b9-4717-96f2-889f5dc8c0a3
# OIDC_AUDIENCE=api://c6108f97-a5b9-4717-96f2-889f5dc8c0a3

# ================================
# AWS S3 Configuration (MinIO)
# ================================
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_ENDPOINT_OVERRIDE=http://minio:9000
GOVDATA_PARQUET_DIR=s3://govdata-parquet
GOVDATA_CACHE_DIR=s3://govdata-production-cache

# ================================
# Government Data API Keys
# ================================
# FRED API Key (https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=YOUR_FRED_API_KEY

# BLS API Key (https://www.bls.gov/developers/api_signature_v2.html)
BLS_API_KEY=YOUR_BLS_API_KEY

# BEA API Key (https://apps.bea.gov/API/signup/)
BEA_API_KEY=YOUR_BEA_API_KEY

# Census API Key (https://api.census.gov/data/key_signup.html)
CENSUS_API_KEY=YOUR_CENSUS_API_KEY

# Optional API Keys
FBI_API_KEY=your-fbi-api-key-here
NHTSA_API_KEY=your-nhtsa-api-key-here
FEMA_API_KEY=your-fema-api-key-here
OPENALEX_API_KEY=your-openalex-api-key-here

# HUD Credentials
HUD_TOKEN=YOUR_HUD_TOKEN
HUD_USERNAME=YOUR_HUD_USERNAME
HUD_PASSWORD=YOUR_HUD_PASSWORD

# Alpha Vantage API Key
ALPHA_VANTAGE_KEY=YOUR_ALPHA_VANTAGE_KEY
